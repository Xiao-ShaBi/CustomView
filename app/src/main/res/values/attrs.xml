<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 仿ios开关按钮 -->
    <declare-styleable name="SwitchView">
        <attr name="hasShadow" format="boolean" />
        <attr name="primaryColor" format="color" />
        <attr name="primaryColorDark" format="color" />
        <attr name="isOpened" format="boolean" />
    </declare-styleable>

    <!-- 仿守望屁股登录进度的进度条 -->
    <declare-styleable name="HiveProgressView">
        <attr name="hive_animDuration" format="integer" />
        <attr name="hive_maxAlpha" format="integer" />
        <attr name="hive_color" format="color" />
        <attr name="hive_rainbow" format="boolean" />
    </declare-styleable>


</resources>